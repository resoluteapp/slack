generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int    @id @default(autoincrement())
  resoluteId    Int    @unique
  resoluteToken String
  slackId       String
  team          Team   @relation(fields: [teamId], references: [id])
  teamId        String

  @@unique([slackId, teamId])
}

model Team {
  id           String @id
  installation Json
  User         User[]
}
